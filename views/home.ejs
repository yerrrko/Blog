<!-- views/home.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Welcome to My Blog</h1>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <h2><%= post.title %></h2>
                <p><%= post.content.substring(0, 100) %></p>
                <% if (post.content.length > 100) { %>
                    <a href="/blog/<%= post.id %>">Read more</a>
                <% } %>
            </li>
        <% }); %>
    </ul>
</body>
</html>
